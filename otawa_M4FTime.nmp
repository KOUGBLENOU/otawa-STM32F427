macro time(x) = "SET_TIME"(x)


extend  MOV_imm, MOVW_imm, MOV_shr, MOVT
    cortexM4F_time = {
        if rd == 15 then
            time("M4F_time_mov_with_pc");
        else
            time("M4F_time_mov_without_pc");
        endif;
    }

